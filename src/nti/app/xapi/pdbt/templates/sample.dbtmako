% if statements:
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th>Time</th>
				<th>Actor</th>
				<th>Verb</th>
				<th>Object</th>
			</tr>
		</thead>
		<tbody>
			% for i, stmt in enumerate(statements):
				<tr>
					<td>${stmt.timestamp}</td>
					<td>${stmt.actor.account.name}</td>
					<td>${stmt.verb.id}</td>
					<td>${getattr(stmt.object, 'id', '')}</td>
				</tr>
			% endfor
		</tbody>
	</table>
% else:
	<p>No statements logged.</p>
% endif

